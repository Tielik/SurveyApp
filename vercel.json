{
    "version": 2,
    "builds": [
        {
            "src": "server/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "build" }
        }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "/server/wsgi.py" },
        { "src": "/(.*)", "dest": "/client/$1" }
    ]
}

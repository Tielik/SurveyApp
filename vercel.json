{
    "version": 2,
    "builds": [
        {
            "src": "backend/core/wsgi.py", 
            "use": "@vercel/python"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "dist" }
        }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "/backend/core/wsgi.py" },
        { "src": "/(.*)", "dest": "/frontend/$1" }
    ]
}
